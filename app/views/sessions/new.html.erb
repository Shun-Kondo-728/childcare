<% provide(:title, "ログイン") %>
<%= render 'shared/recruit_login' %>
<div class="signup-block">
  <div class="signup-group">
    <h1 class=sign-title>ログイン</h1>
    <%= form_for(:session, url: login_path, local: true) do |f| %>
      <div class="field"> 
        <%= f.label :name, "名前" %>
        <%= f.text_field :name, class: "form-control", id: "user_name" %>
      </div>
      <div class="field"> 
        <%= f.label :password, "パスワード" %>
        <%= f.password_field :password, class: "form-control", id: "user_password" %>
      </div>
      <div class="actions">
        <%= f.submit "ログイン", class: "btn btn-primary" %>
      </div>
    <% end %>
    <div class="guide">
      <br>ユーザー登録されていない方は<%= link_to 'こちら', signup_path %><br>
    </div>
  </div>
</div>